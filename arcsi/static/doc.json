            },
            "archived": {
              "type": "boolean"
            },
            "download_count": {
              "type": "integer",
              "format": "int32"
            },
            "uploader": {
              "type": "string"
            },
            "shows": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/components/schemas/show"
              }
            }
          }
        },
        "ItemRequests": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/components/schemas/ItemRequest"
          }
        },
        "ItemRequestPostBody": {
          "type": "object",
          "properties": {
            "number": {
              "type": "integer",
              "format": "int32",
              "example": 42
            },
            "name": {
              "type": "string",
              "example": "item-name"
            },
            "description": {
              "type": "string",
              "example": "item-description"
            },
            "language": {
              "type": "string",
              "example": "item-language"
            },
            "play_date": {
              "type": "string",
              "format": "date",
              "example": "2001-09-11"
            },
