            "name": "month",
            "required": true,
            "description": "default: current month",
            "type": "int"
          },
          {
            "in": "path",
            "name": "day",
            "required": true,
            "description": "default: current day",
            "type": "int"
          },
          {
            "in": "path",
            "name": "last_weeks",
            "required": true,
            "description": "default: 1",
            "type": "int"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
