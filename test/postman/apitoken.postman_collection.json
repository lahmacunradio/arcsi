{
	"info": {
		"_postman_id": "233def5f-b1f0-47df-bb5b-1dd6bb180e3a",
		"name": "API token test",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "19378201"
	},
	"item": [
		{
			"name": "get_api_token()",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var response = JSON.parse(responseBody)\r",
							"pm.environment.set(\"api_token\", response.api_token);\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Content-Type is application/json\", function() {\r",
							"    pm.response.to.be.header(\"Content-Type\", \"application/json\")\r",
							"});\r",
							"\r",
							"pm.test(\"API token has been set up: \" + pm.environment.get(\"api_token\"), function() {\r",
							"    pm.expect(pm.environment.get(\"api_token\")).not.equal(\"\")\r",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "name",
							"value": "testuser",
							"type": "text"
						},
						{
							"key": "password",
							"value": "testpassword",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{url}}/users/get_api_token",
					"host": [
						"{{url}}"
					],
					"path": [
						"users",
						"get_api_token"
					]
				}
			},
			"response": []
		}
	]
}